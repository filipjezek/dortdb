{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "module": "preserve",
    "moduleResolution": "bundler",
    "lib": ["DOM"]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "../../../tools/vitest"
    }
  ],
  "files": ["src/test-setup.ts"]
}
